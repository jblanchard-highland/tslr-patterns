<div class="banner-module-resources {{class}}" style="background-image: url('{{image}}');">

    <div class="container">
        
        
        <div class="row">

            <div class="col-md-12">

                <div class="breadcrumbs">
                    
                    <a href="#">Resources</a> > Set Your College Goals

                </div>

            </div>

        </div>
        
        
        <div class="row">

            <div class="col-md-12">

                <div class="list-circles">
                    
                    <ul>
                        <li>1</li>
                        <li>2</li>
                        <li>3</li>
                        <li>4</li>
                        <li>5</li>
                        <li>6</li>
                        <li>7</li>
                        
                    </ul>

                </div>

            </div>

        </div>

        <div class="row">

            <div class="col-md-7">

                <div class="resources-content">

                    <h1>{{title}}</h1>

                </div>

            </div>

        </div>
        
